#include <bits/stdc++.h> 
vector<int> dijkstra(vector<vector<int>> &edge, int vertices, int edges, int source) {
    // Write your code here.
    //  priority_queue<pair<int,int>,vector<pair<int,int>>,greater<pair<int,int>>>pq;
    set<pair<int,int>>st;

    unordered_map<int,vector<pair<int,int>>>adj;
    for(auto &e:edge){
        adj[e[0]].push_back({e[2],e[1]});
        adj[e[1]].push_back({e[2],e[0]});
    }
    st.insert({0,source});

    vector<int>result(vertices,INT_MAX);

    result[source]=0;

    while(!st.empty()){
        auto &it=*st.begin();
        // pq.pop();
        int d=it.first;
        int n=it.second;
        st.erase(it);

        for(auto x:adj[n]){
            int node=x.second;
            int dist=x.first;

            if(d+dist<result[node]){
                if(result[node]!=INT_MAX){
                    st.erase({result[node],node});
                }
                result[node]=d+dist;
                st.insert({d+dist,node});
            }
        }
    }
    return result;
}
